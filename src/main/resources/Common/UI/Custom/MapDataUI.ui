$C = "Common.ui";

@CustomLabelStyle = LabelStyle(
  FontSize: 14,
  TextColor: #bfcdd5,
  RenderBold: true,
  RenderUppercase: true,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

@SaveStyle = TextButtonStyle(
  Default: (Background: $C.@DefaultSquareButtonDefaultBackground, LabelStyle: @CustomLabelStyle),
  Hovered: (Background: $C.@DefaultSquareButtonHoveredBackground, LabelStyle: @CustomLabelStyle),
  Pressed: (Background: $C.@DefaultSquareButtonPressedBackground, LabelStyle: @CustomLabelStyle),
  Disabled: (Background: $C.@DefaultSquareButtonDisabledBackground, LabelStyle: @CustomLabelStyle),
  Sounds: $C.@ButtonSounds,
);

@CloseStyle = TextButtonStyle(
  Default: (Background: PatchStyle(TexturePath: "Common/Buttons/Tertiary.png", Border: $C.@ButtonBorder), LabelStyle: @CustomLabelStyle),
  Hovered: (Background: PatchStyle(TexturePath: "Common/Buttons/Tertiary_Hovered.png", Border: $C.@ButtonBorder), LabelStyle: @CustomLabelStyle),
  Pressed: (Background: PatchStyle(TexturePath: "Common/Buttons/Tertiary_Pressed.png", Border: $C.@ButtonBorder), LabelStyle: @CustomLabelStyle),
  Disabled: (Background: PatchStyle(TexturePath: "Common/Buttons/Disabled.png", Border: $C.@ButtonBorder), LabelStyle: @CustomLabelStyle),
  Sounds: $C.@ButtonSounds,
);

$C.@PageOverlay {

  $C.@DecoratedContainer {
    Anchor: (Width: 600, Height: 320);

    #Title {
      Group {
        $C.@Title {
          @Text = "Map Data";
        }
      }
    }

    Group {
      LayoutMode: Top;

      Group #Name {
        LayoutMode: Top;
        FlexWeight: 0;
        Anchor: (Left: 20, Top: 50);

        Label #NameLabel {
          Text: "Name";
          Style: (FontSize: 15, RenderBold: true);
        }

        TextField #NameInput {
          Style: $C.@DefaultInputFieldStyle;
          Background: $C.@InputBoxBackground;
          Anchor: (Width: 540, Height: 35, Left: 0);
          Padding: (Full: 10);
        }
      }

      Group #Author {
        LayoutMode: Top;
        FlexWeight: 0;
        Anchor: (Left: 20, Top: 10);

        Label #AuthorLabel {
          Text: "Author";
          Style: (FontSize: 15, RenderBold: true);
        }

        TextField #AuthorInput {
          Style: $C.@DefaultInputFieldStyle;
          Background: $C.@InputBoxBackground;
          Anchor: (Width: 540, Height: 35, Left: 0);
          Padding: (Full: 10);
        }
      }

      Group #Type {
        LayoutMode: Top;
        FlexWeight: 0;
        Anchor: (Left: 20, Top: 10);

        Label #TypeLabel {
          Text: "Type";
          Style: (FontSize: 15, RenderBold: true);
        }

        $C.@DropdownBox #TypeDropdown {
          Style: @DefaultDropdownBoxStyle;
          Anchor: (Left: 0, Width: 300, Height: 35);
        }
      }

      Group #Buttons {
        LayoutMode: Center;
        FlexWeight: 0;
        Anchor: (Width: 600, Top: 30);

        $C.@TextButton #CloseButton {
          Text: "Close";
          Style: @CloseStyle;
          Anchor: (Width: 150, Height: 35);
        }

        Group {
          Anchor: (Width: 30);
        }

        $C.@TextButton #SaveButton {
          Text: "Save";
          Anchor: (Width: 150, Height: 35);
          Style: @SaveStyle;
          Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        }
      }

    }

  }

}